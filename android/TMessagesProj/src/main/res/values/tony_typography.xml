<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tony Chat Typography Scale (9 levels) -->
    <style name="Tony.Text" parent="android:TextAppearance" />
    <style name="Tony.Text.DisplayLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="Tony.Text.DisplayMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Tony.Text.HeadlineLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Tony.Text.HeadlineMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Tony.Text.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Tony.Text.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Tony.Text.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Tony.Text.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Tony.Text.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
